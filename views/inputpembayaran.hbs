        <h1 align= "center" style="font-family: 'Times New Roman', Times, serif;"><b>PEMBAYARAN</b></h1>
        <br><br>
        <br/>
         <table class="table table-hover">
            <thead>
                <tr class="bg-danger">
                    <th>ID USER</th>
                    <th>SISWA</th>
                    <th>BULAN</th>
                    <th>JUMLAH</th>
                    <th>TANGGAL TRANSAKSI</th>
                </tr>
            </thead>
            <tbody class="table table-active">
                {{#each data}}
                    <tr>
                        <td>{{ id_pembayaran }}</td>
                        <td>{{ siswa }}</td>
                        <td>{{ bulan }}</td>
                        <td>{{ jumlah }}</td>
                        <td>{{ tanggal_transaksi }}</td>
                        <td><a href="/hapus-siswa/{{ siswa }}"><button>HAPUS</button></a></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <form action="/inputpembayaran" method="POST">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
                <input type="text" name="inputsiswa" placeholder="Siswa">
                <input type="text" name="inputbulan" placeholder="Bulan">
                <input type="text" name="inputjumlah" placeholder="Jumlah">
                <input type="date" name="inputtanggaltransaksi" placeholder="Tanggal Transaksi" >
                <button type="submit">Tambah</button>
                
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
    </form>
  </div>
</div>
